<div class="ui grid">
    <div class="row">
        <div class="sixteen wide column">
            <h1>ایجاد تغییرات در محصول</h1>
        </div>
    </div>

    <!-- GENRAL SECTION -->

    <div class="row">
        <div class="sixteen wide column">
            <div class="ui segment sixteen column">
                <div class="ui grid">
                    <div class="sixteen wide mobile sixteen wide tablet sixteen wide computer column">
                        <h2 class="ui dividing header">اطلاعات عمومی</h2>
                    </div>
                    <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                        <div class="ui form">
                            <div class="field required">
                                <label>نام محصول</label>
                                <input id="itemName" required type="text" placeholder="نام محصول">
                            </div>
                        </div>
                    </div>
                    <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                        <div class="ui form">
                            <div class="field required">
                                <label>SKU</label>
                                <input id="itemSku" type="text" placeholder="اسکیو">
                            </div>
                        </div>
                    </div>
                    <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                        <div class="ui form">
                            <div class="field">
                                <label>دپارتمان</label>
                                <div class="ui action input">
                                    <select id="itemDepartment" class="ui selection fluid dropdown ajax-caller" name="itemDepartment"  data-url="department">
                                        <option data-value="0">بدون دپارتمان</option>
                                    </select>
                                    <button class="ui primary button">
                                        <i class="add large inverted circle icon" style="margin-left: 0"></i>
                                    </button>
                                    <div class="ui active dimmer inverted">
                                        <div class="ui small text loader">در حال بارگزاری</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                        <div class="ui form">
                            <div class="field">
                                <label>دسته بندی</label>
                                <div class="ui action input">
                                    <select id="itemCategory" class="ui selection fluid dropdown ajax-caller" name="itemCategory" data-url="category">
                                        <option data-value="0">بدون دسته بندی</option>
                                    </select>
                                    <button class="ui primary button">
                                        <i class="add large inverted circle icon" style="margin-left: 0"></i>
                                    </button>
                                    <div class="ui active dimmer inverted">
                                        <div class="ui small text loader">در حال بارگزاری</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                        <div class="ui form">
                            <div class="field">
                                <label>تگ های محصول</label>
                                <div class="ui action input">
                                    <div class="ui fluid multiple search selection dropdown" id="tag-input">
                                        <input type="hidden">
                                        <i class="dropdown icon"></i>
                                        <div class="default text">تگ های محصول</div>
                                        <div class="menu">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                        <div class="ui form">
                            <div class="field">
                                <label>عکس محصول</label>
                                <input type="file" placeholder="نام محصول">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END OF GENRAL SECTION -->
    <!-- PRICING -->



    <div class="sixteen wide column">
        <div class="ui segment sixteen column">
            <div class="ui grid">
                <div class="sixteen wide tablet sixteen wide computer column">
