@using POS.Helpers
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")*@
    <link rel="stylesheet" type="text/css" href="@Url.Content("../../Content/semantic.rtl.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("../../Content/Site.css")" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div id="pageLoader" class="ui inverted dimmer">
    <div class="ui large text loader">لطفآ منتظر بمانید</div>
</div>

    @Html.Partial("_Navigation")

<div class="main-wrapper">
        <aside>
            @Html.Partial("_Sidebar")
        </aside>
        <main>
            <div class="scrollbar-wrapper">
                <div class="scrollbar-overlay"></div>
                <div class="content-wrapper">
                    <div class="grid-wrapper">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </main>
    </div>



    <script src="@Url.Content("~/Scripts/lib/require.js")"></script>

    <script>
        @Html.ViewSpecificRequireJS()
    </script>

    @*@Scripts.Render("~/bundles/jquery")
        <script src="@Url.Content("../../Scripts/semantic.js")"></script>
        <script src="@Url.Content("../../Scripts/site.js")"></script>*@

    @RenderSection("scripts", required: false)
</body>
</html>
