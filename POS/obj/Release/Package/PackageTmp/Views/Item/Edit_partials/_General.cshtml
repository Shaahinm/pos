@model POS.Models.EditViewModel

<div class="ui grid">
    <div class="row">
        <div class="sixteen wide column">
            <h1>ایجاد تغییرات در محصول</h1>
        </div>
    </div>

    <!-- GENRAL SECTION -->

    <div class="row">
        <div class="sixteen wide column">
            <div class="ui segment sixteen column">
                <div class="ui grid">
                    <div class="sixteen wide mobile sixteen wide tablet sixteen wide computer column">
                        <h2 class="ui dividing header">اطلاعات عمومی</h2>
                    </div>
                    <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                        <div class="ui form">
                            <div class="field required">
                                <label>نام محصول</label>
                                @Html.TextBoxFor(m => m.itemName, new { @class = "", placeholder = "نام محصول" })
                                @*<input id="@Model.ItemName" type="text" placeholder="نام محصول">*@
                            </div>
                        </div>
                    </div>
                    <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                        <div class="ui form">
                            <div class="field required">
                                <label>SKU</label>
                                @Html.TextBoxFor(m => m.itemSku, new { @class = "", placeholder = "اسکیو" })
                                @*<input id="itemSku" type="text" placeholder="اسکیو">*@
                            </div>
                        </div>
                    </div>
                    <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                        <div class="ui form">
                            <div class="field">
                                <label>دپارتمان</label>
                                <div class="ui action input">
                                    @Html.DropDownListFor(m => m.itemDepartmentId, Model.itemDepartment)
                                    <button id="btnQuickAddDepartment" class="ui primary button">
                                        <i class="add large inverted circle icon" style="margin-left: 0"></i>
                                    </button>
                                    @*<div class="ui active dimmer inverted">
                                        <div class="ui small text loader">در حال بارگزاری</div>
                                    </div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                        <div class="ui form">
                            <div class="field">
                                <label>دسته بندی</label>
                                <div class="ui action input">
                                    @Html.DropDownListFor(m => m.itemCategoryId, Model.itemCategory)
                                    @*<div class="ui fluid selection dropdown" id="itemCategory">
                                        <i class="dropdown icon"></i>
                                        <div class="default text">بدون دسته بندی</div>
                                        <div class="menu ajax-caller" data-url="category">

                                        </div>
                                    </div>*@
                                    <button class="ui primary button">
                                        <i class="add large inverted circle icon" style="margin-left: 0"></i>
                                    </button>
                                    @*<div class="ui active dimmer inverted">
                                        <div class="ui small text loader">در حال بارگزاری</div>
                                    </div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                        <div class="ui form">
                            <div class="field">
                                <label>تگ های محصول</label>
                                <div class="ui action input">
                                    <div class="ui fluid multiple search selection dropdown" id="itemTag">
                                        <input type="hidden" value="@Model.tags">
                                        <i class="dropdown icon"></i>
                                        
                                        @foreach (var tag in @Model.itemTag)
                                        {
                                            <a class="ui label transition visible" data-value="@tag.value" style="display: inline-block !important;">@tag.text<i class="delete icon"></i></a>
                                        }
                                        <div class="default text"></div>
                                        <div class="menu">
                                        </div>
                                    </div>
                                    @*<div class="ui fluid multiple search selection dropdown" id="itemTag">
                                        <input type="hidden">
                                        <i class="dropdown icon"></i>
                                        <div class="default text">تگ های محصول</div>
                                        <div class="menu">
                                        </div>
                                    </div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                        <div class="ui form">
                            <div class="field">
                                <label>عکس محصول</label>
                                <input type="file" placeholder="نام محصول">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END OF GENRAL SECTION -->
    <!-- PRICING -->



    <div class="sixteen wide column">
        <div class="ui segment sixteen column">
            <div class="ui grid">
                <div class="sixteen wide tablet sixteen wide computer column">
                    <h2 class="ui dividing header">قیمت گذاری</h2>
                </div>
                <div class="sixteen wide tablet eight wide computer column">
                    <div class="ui form">
                        <div class="field required">
                            <label>نوع قیمت</label>
                            <div class="ui action input">
                                <div class="ui fluid selection dropdown" id="itemPrice" name="itemPrice">
                                    <i class="dropdown icon"></i>
                                    <div class="default text">ثابت</div>
                                    <div class="menu">
                                        <div class="item" data-value="fixed">ثابت</div>
                                        <div class="item" data-value="variable">متغییر</div>
                                        <div class="item" data-value="unit">قیمت بر اساس تعداد</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sixteen wide tablet eight wide computer column">
                    <div class="ui form">
                        <div class="field required">
                            <label>بهای تمام شده</label>
                            @Html.TextBoxFor(m => m.cost, new { @class = "", placeholder = "بهای محصول" })
                            @*<input type="text" class="persian-number" placeholder="بهای محصول">*@
                        </div>
                    </div>
                </div>
                <!-- fixed segment -->
                <div id="fixed-segment" class="sixteen wide column">
                    <div class="ui segment sixteen column">
                        <h3 class="ui dividing header">قیمت</h3>
                        <div class="ui grid">
                            <div class="sixteen wide tablet four wide computer column">
                                <div class="ui form">
                                    <div class="field">
                                        @Html.TextBoxFor(m => m.price, new { @class = "", placeholder = "قیمت بدون مالیات" })
                                        @*<input type="text" placeholder="قیمت بدون مالیات">*@
                                    </div>
                                </div>
                            </div>
                            <div class="sixteen wide tablet two wide computer column center aligned">
                                <i class="big inverted blue bordered add icon"></i>
                            </div>
                            <div class="sixteen wide tablet four wide computer column">
                                <div class="ui form">
                                    <div class="field">
                                        <div class="ui action input">
                                            @Html.DropDownListFor(m => m.taxtTypeId, Model.taxType)
                                            <button class="ui primary button">
                                                <i class="add large inverted circle icon" style="margin-left: 0"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="sixteen wide tablet two wide computer column center aligned">
                                <i class="big inverted blue bordered minus icon"></i>
                            </div>
                            <div class="sixteen wide tablet four wide computer column">
                                <div class="ui form">
                                    <div class="field">
                                        @Html.TextBoxFor(m => m.taxedPrice, new { @class = "", placeholder = "قیمت بعد از مالیات" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- variable segment -->
                <div id="variable-segment" style="display: none;" class="eight wide column">
                    <div class="sixteen wide tablet four wide computer column">
                        <div class="ui form">
                            <div class="field">
                                <div class="ui action input">
                                    <div class="ui fluid selection dropdown">
                                        <i class="dropdown icon"></i>
                                        <div class="default text">نوع مالیات</div>
                                        <div class="menu">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- unit segment -->
                <div id="unit-segment" style="display: none;" class="sixteen wide column">
                    <div class="ui segment sixteen column">
                        <h3 class="ui dividing header">unit قیمت</h3>
                        <div class="ui grid">
                            <div class="sixteen wide tablet four wide computer column">
                                <div class="ui form">
                                    <div class="field">
                                        <input type="text" placeholder="قیمت بدون مالیات">
                                    </div>
                                </div>
                            </div>
                            <div class="sixteen wide tablet two wide computer column center aligned">
                                +
                            </div>
                            <div class="sixteen wide tablet four wide computer column">
                                <div class="ui form">
                                    <div class="field">
                                        <div class="ui action input">
                                            <div class="ui fluid selection dropdown">
                                                <i class="dropdown icon"></i>
                                                <div class="default text">نوع مالیات</div>
                                                <div class="menu">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="sixteen wide tablet two wide computer column center aligned">
                                =
                            </div>
                            <div class="sixteen wide tablet four wide computer column">
                                <div class="ui form">
                                    <div class="field">
                                        <input type="text" name="totalPrice" placeholder="قیمت بعد از مالیات">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END OF PRICING -->
</div>