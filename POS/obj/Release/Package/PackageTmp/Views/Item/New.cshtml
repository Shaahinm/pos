@using POS.Helpers

@{
    ViewBag.Title = "New";
}

<div class="ui grid">
<div class="row">
    <div class="sixteen wide column">
        <h1>اضافه کردن محصول</h1>
    </div>
</div>

<div class="row">
    @Html.Partial("_Breadcrumb")
</div>

<!-- GENRAL SECTION -->
<div class="row">
    <div class="sixteen wide column">
        <div class="ui segment sixteen column">
            <div class="ui grid">
                <div class="sixteen wide mobile sixteen wide tablet sixteen wide computer column">
                    <h2 class="ui dividing header">اطلاعات عمومی</h2>
                </div>
                <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                    <div class="ui form">
                        <div class="field">
                            <label>نام محصول</label>
                            <input type="text" placeholder="نام محصول">
                        </div>
                    </div>
                </div>
                <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                    <div class="ui form">
                        <div class="field">
                            <label>SKU</label>
                            <input type="text" placeholder="اسکیو">
                        </div>
                    </div>
                </div>
                <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                    <div class="ui form">
                        <div class="field">
                            <label>دپارتمان</label>
                            <div class="ui action input">
                                <div class="ui fluid selection dropdown">
                                    <input type="hidden" name="gender">
                                    <i class="dropdown icon"></i>
                                    <div class="default text">بدون دپارتمان</div>
                                    <div class="menu menu-ajax-init" data-url="department">

                                    </div>
                                </div>
                                <button class="ui button">
                                    <i class="add icon"></i>
                                </button>
                                <div class="ui active dimmer inverted">
                                    <div class="ui small text loader">در حال بارگزاری</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                    <div class="ui form">
                        <div class="field">
                            <label>دسته بندی</label>
                            <div class="ui action input">
                                <div class="ui fluid selection dropdown">
                                    <i class="dropdown icon"></i>
                                    <div class="default text">بدون دسته بندی</div>
                                    <div class="menu menu-ajax-init" data-url="category">
                                    </div>
                                </div>
                                <button class="ui button">
                                    <i class="add icon"></i>
                                </button>
                                <div class="ui active dimmer inverted">
                                    <div class="ui small text loader">در حال بارگزاری</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                    <div class="ui form">
                        <div class="field">
                            <label>تگ های محصول</label>
                            <div class="ui action input">
                                <div class="ui fluid multiple search selection dropdown" id="tag-input">
                                    <i class="dropdown icon"></i>
                                    <div class="default text">تگ های محصول</div>
                                    <div class="menu">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sixteen wide mobile sixteen wide tablet eight wide computer column">
                    <div class="ui form">
                        <div class="field">
                            <label>عکس محصول</label>
                            <input type="file" placeholder="نام محصول">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END OF GENRAL SECTION -->
<!-- PRICING -->
<div class="sixteen wide column">
    <div class="ui segment sixteen column">
        <div class="ui grid">
            <div class="sixteen wide tablet sixteen wide computer column">
                <h2 class="ui dividing header">قیمت گذاری</h2>
            </div>
            <div class="sixteen wide tablet eight wide computer column">
                <div class="ui form">
                    <div class="field">
                        <label>نوع قیمت</label>
                        <div class="ui action input">
                            <div class="ui fluid selection dropdown" id="ddl-price">
                                <i class="dropdown icon"></i>
                                <div class="default text">ثابت</div>
                                <div class="menu">
                                    <div class="item" data-value="fixed">ثابت</div>
                                    <div class="item" data-value="variable">متغییر</div>
                                    <div class="item" data-value="unit">قیمت بر اساس تعداد</div>
                                </div>
                            </div>
                            <!-- <div class="ui active dimmer inverted">
                                <div class="ui small text loader">در حال بارگزاری</div>
                            </div> -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="sixteen wide tablet eight wide computer column">
                <div class="ui form">
                    <div class="field">
                        <label>بهای تمام شده</label>
                        <input type="text" class="persian-number" placeholder="بهای محصول">
                    </div>
                </div>
            </div>
            <!-- fixed segment -->
            <div id="fixed-segment" class="sixteen wide column">
                <div class="ui segment sixteen column">
                    <h3 class="ui dividing header">قیمت</h3>
                    <div class="ui grid">
                        <div class="sixteen wide tablet four wide computer column">
                            <div class="ui form">
                                <div class="field">
                                    <input type="text" placeholder="قیمت بدون مالیات">
                                </div>
                            </div>
                        </div>
                        <div class="sixteen wide tablet two wide computer column center aligned">
                            <i class="add icon"></i>
                        </div>
                        <div class="sixteen wide tablet four wide computer column">
                            <div class="ui form">
                                <div class="field">
                                    <div class="ui action input">
                                        <div class="ui fluid selection dropdown">
                                            <i class="dropdown icon"></i>
                                            <div class="default text">نوع مالیات</div>
                                            <div class="menu menu-ajax-init" data-url="tax">
                                            </div>
                                        </div>
                                        <button class="ui button">
                                            <i class="add icon"></i>
                                        </button>
                                        <div class="ui active dimmer inverted">
                                            <div class="ui small text loader">در حال بارگزاری</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="sixteen wide tablet two wide computer column center aligned">
                            <i style="display: block;" class="minus icon"></i>
                            <i style="display: block;" class="minus icon"></i>
                        </div>
                        <div class="sixteen wide tablet four wide computer column">
                            <div class="ui form">
                                <div class="field">
                                    <input type="text" name="totalPrice" id="totalPrice" placeholder="قیمت بعد از مالیات">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- variable segment -->
            <div id="variable-segment" style="display: none;" class="eight wide column">
                <div class="sixteen wide tablet four wide computer column">
                    <div class="ui form">
                        <div class="field">
                            <div class="ui action input">
                                <div class="ui fluid selection dropdown">
                                    <i class="dropdown icon"></i>
                                    <div class="default text">نوع مالیات</div>
                                    <div class="menu">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- unit segment -->
            <div id="unit-segment" style="display: none;" class="sixteen wide column">
                <div class="ui segment sixteen column">
                    <h3 class="ui dividing header">unit قیمت</h3>
                    <div class="ui grid">
                        <div class="sixteen wide tablet four wide computer column">
                            <div class="ui form">
                                <div class="field">
                                    <input type="text" placeholder="قیمت بدون مالیات">
                                </div>
                            </div>
                        </div>
                        <div class="sixteen wide tablet two wide computer column center aligned">
                            +
                        </div>
                        <div class="sixteen wide tablet four wide computer column">
                            <div class="ui form">
                                <div class="field">
                                    <div class="ui action input">
                                        <div class="ui fluid selection dropdown">
                                            <i class="dropdown icon"></i>
                                            <div class="default text">نوع مالیات</div>
                                            <div class="menu">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="sixteen wide tablet two wide computer column center aligned">
                            =
                        </div>
                        <div class="sixteen wide tablet four wide computer column">
                            <div class="ui form">
                                <div class="field">
                                    <input type="text" name="totalPrice" placeholder="قیمت بعد از مالیات">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END OF PRICING -->
</div>
